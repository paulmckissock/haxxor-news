<%= form_tag login_path do %>
    <%= label_tag "Username" %>
    <%= text_field_tag :name, nil, placeholder: "Username" %>
    <%= label_tag "Password" %>
    <%= password_field_tag :password, nil, placeholder: "Password" %>
    <%= submit_tag "Log In"%>
    <%= link_to "Forgot your password?", password_reset_path%>
<% end %>
